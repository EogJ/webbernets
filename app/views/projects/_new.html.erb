
<%= render 'shared/project_visibility_tooltip' %>

<%= render 'shared/modal', id: 'modal', title: 'New Project' do %>
  <%= form_tag projects_path(from_none: params[:from_none]) do %>
    <div class="form-group">
      <%= label_tag :title, 'Project Name', class: 'control-label' %>
      <%= text_field_tag :title, '' , { placeholder: 'Name your project', required: true, class: 'form-control' } %>
    </div>
    <div class="form-group">
      <%= label_tag :visibility, 'Type', class: 'control-label' %>
      <%= link_to '#', class: '', style: 'margin-left: 5px', target: '_blank', id: 'visibility-help' do %>
        <i class="fa fa-question-circle"></i>&nbsp
      <% end %>
      <%= select_tag :visibility, options_for_select(['Private', 'Public']),  class: 'form-control'  %>
    </div>
    <% if current_user.super_user %>
      <div class="form-group">
        <%= check_box_tag :join_project, '1', true %>
        <%= label_tag :join_project, 'Join this project', class: 'control-label' %>
      </div>
    <% end %>
    <div class="form-group">
      <%= button_tag 'Create', class: 'btn btn-primary' %>
    </div>
  <% end %>
<% end %>
